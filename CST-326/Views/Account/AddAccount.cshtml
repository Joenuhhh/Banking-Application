@model CST_326.Models.ViewModel.AddAccountViewModel

<h4>Add Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessAddAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- UserId field (hidden) -->
            <input asp-for="Account.UserId" type="hidden" />

            <!-- Account Number field (disabled, auto-populated) -->
            <div class="form-group">
                <label asp-for="Account.AccountNumber" class="control-label"></label>
                <input asp-for="Account.AccountNumber" class="form-control" disabled />
                <span asp-validation-for="Account.AccountNumber" class="text-danger"></span>
            </div>

            <!-- Account Type dropdown (user selection) -->
            <div class="form-group">
                <label asp-for="Account.AccountType" class="control-label"></label>
                <select asp-for="Account.AccountType" class="form-control">
                    <option value="Checking">Checking</option>
                    <option value="Savings">Savings</option>
                </select>
                <span asp-validation-for="Account.AccountType" class="text-danger"></span>
            </div>

            <!-- Balance field (disabled, auto-populated) -->
            <!-- Balance field (user input) -->
            <div class="form-group">
                <label asp-for="InitialBalance" class="control-label">Initial Balance</label>
                <input asp-for="InitialBalance" class="form-control" />
                <span asp-validation-for="InitialBalance" class="text-danger"></span>
            </div>


            <!-- CreatedAt field (disabled, auto-populated) -->
            <div class="form-group">
                <label asp-for="Account.CreatedAt" class="control-label"></label>
                <input asp-for="Account.CreatedAt" class="form-control" disabled />
                <span asp-validation-for="Account.CreatedAt" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" name="userId" value="@Model.User.UserId" />

        </form>
    </div>
</div>

<div>
    <a asp-action="Dashboard" asp-controller="Account">Back to Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
